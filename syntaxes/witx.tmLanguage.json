{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "witx",
	"patterns": [
		{
			"include": "#root"
		}
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"comment": "Comments",
					"match": ";;;.*",
					"name": "comment.line.double-slash.witx"
				}
			]
		},
		"types_and_stuff": {
			"patterns": [
				{
					"comment": "Comments",
					"match": ";;.*",
					"name": "comment.line.double-slash.witx"
				},
				{
					"comment": "Types",
					"match": "\\$[a-zA-Z0-9_]+[a-zA-Z0-9_-]*?",
					"name": "storage.type.witx"
				},
				{
					"comment": "Native types",
					"match": "\\b(char8|f32|f64|empty|handle|s16|s32|s64|s8|string|u16|u32|u64|u8|usize)\\b",
					"name": "support.type.witx"
				},
				{
					"comment": "Modifiers",
					"match": "\\b(array|int|const_pointer|pointer)\\b",
					"name": "storage.modifier.witx"
				},
				{
					"comment": "Keywords",
					"match": "\\b(export|func|import|memory|module|param|result|field|flags|noreturn|enum|struct|union|use|typename)\\b",
					"name": "keyword.other.witx"
				},
				{
					"comment": "Keywords",
					"match": "\\bconst\\b",
					"name": "storage.modifier.witx"
				},
				{
					"comment": "Strings",
					"begin": "\"",
					"end": "\"",
					"name": "string.quoted.double.witx"
				}
			]
		},
		"types": {
			"patterns": [
				{
					"begin": "\\(\\s*(@witx)",
					"end": "\\)",
					"beginCaptures": {
						"1": {
							"name": "keyword.other"
						}
					}
				},
				{
					"include": "#types_and_stuff"
				}
			]
		},
		"inside_type_definitions": {
			"patterns": [
				{
					"include": "#comments"
				},
				{
					"begin": "\\(",
					"end": "\\)",
					"name": "inside_inside_type_definitions",
					"patterns": [
						{
							"include": "#comments"
						},
						{
							"include": "#types"
						},
						{
							"include": "#inside_inside_type_definitions"
						}
					]
				}
			]
		},
		"inside_module_definitions": {
			"patterns": [
				{
					"include": "#comments"
				},
				{
					"begin": "\\(\\s*(import)\\s*(\".+?\")\\s*\\(.+?\\)",
					"end": "\\)",
					"beginCaptures": {
						"1": {
							"name": "keyword.other"
						},
						"2": {
							"name": "string.quoted.double.witx"
						},
						"3": {
							"name": "storage.type"
						}
					},
					"name": "inside_module_import",
					"patterns": [
						{
							"include": "#comments"
						},
						{
							"include": "#types_and_stuff"
						}
					]
				},
				{
					"begin": "\\(\\s*(@interface)\\s*(func)\\s*\\(\\s*(export)\\s*(\".+?\")\\)",
					"end": "\\)",
					"beginCaptures": {
						"1": {
							"name": "keyword.other"
						},
						"2": {
							"name": "keyword.other"
						},
						"3": {
							"name": "storage.type"
						},
						"4": {
							"name": "entity.name.function"
						}
					},
					"name": "inside_module_import",
					"patterns": [
						{
							"include": "#comments"
						},
						{
							"include": "#types_and_stuff"
						},
						{
							"begin": "\\(\\s*(param)\\s+(\\$.+?)\\s+",
							"end": "\\)",
							"beginCaptures": {
								"1": {
									"name": "keyword.other"
								},
								"2": {
									"name": "variable.parameter"
								}
							},
							"patterns": [
								{
									"include": "#types"
								}
							]
						},
						{
							"begin": "\\(\\s*(result)\\s+(\\$.+?)\\s+",
							"end": "\\)",
							"beginCaptures": {
								"1": {
									"name": "keyword.control"
								},
								"2": {
									"name": "variable.parameter"
								}
							},
							"patterns": [
								{
									"include": "#types"
								}
							]
						}
					]
				}
			]
		},
		"root": {
			"patterns": [
				{
					"include": "#comments"
				},
				{
					"begin": "\\s*\\(\\s*(typename)\\s*(\\$\\w+)",
					"end": "\\)",
					"beginCaptures": {
						"1": {
							"name": "keyword.other"
						},
						"2": {
							"name": "storage.type"
						}
					},
					"patterns": [
						{
							"include": "#comments"
						},
						{
							"include": "#inside_type_definitions"
						}
					]
				},
				{
					"begin": "\\s*\\(\\s*(module)\\s*(\\$\\w+)",
					"end": "\\)",
					"beginCaptures": {
						"1": {
							"name": "keyword.other"
						},
						"2": {
							"name": "support.constant.witx"
						}
					},
					"patterns": [
						{
							"include": "#comments"
						},
						{
							"include": "#inside_module_definitions"
						}
					]
				}
			]
		}
	},
	"scopeName": "source.witx"
}